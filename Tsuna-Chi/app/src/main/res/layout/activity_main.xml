<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header2"
            android:layout_width="413dp"
            android:layout_height="68dp"
            android:layout_marginTop="-1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/header" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="105dp"
            android:layout_height="66dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/bond"
            app:layout_constraintEnd_toStartOf="@+id/textView1"
            app:layout_constraintStart_toEndOf="@+id/YourBloodTypeText"
            app:layout_constraintTop_toBottomOf="@+id/header2" />

        <TextView
            android:id="@+id/bondPersText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="32dp"
            android:text=""
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/checkComp"
            app:layout_constraintEnd_toStartOf="@+id/rgbtPART"
            app:layout_constraintHorizontal_bias="0.269"
            app:layout_constraintStart_toEndOf="@+id/rgbtPERS"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.545" />

        <TextView
            android:id="@+id/bondPartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text=""
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/checkComp"
            app:layout_constraintEnd_toStartOf="@+id/rgbtPART"
            app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintStart_toEndOf="@+id/rgbtPERS"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.545" />

        <TextView
            android:id="@+id/xshipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="30dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/checkComp"
            app:layout_constraintEnd_toStartOf="@+id/bondPartText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bondPersText"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.545" />

        <TextView
            android:id="@+id/YourBloodTypeText"
            android:layout_width="107dp"
            android:layout_height="58dp"
            android:layout_marginTop="32dp"
            android:text="YOUR Blood Type"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/checkComp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header2" />

        <RadioGroup
            android:id="@+id/rgbtPERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/YourBloodTypeText"
            app:layout_constraintStart_toStartOf="@+id/YourBloodTypeText"
            app:layout_constraintTop_toBottomOf="@+id/YourBloodTypeText">

            <RadioButton
                android:id="@+id/rbpers1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Type A" />

            <RadioButton
                android:id="@+id/rbpers2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type AB" />

            <RadioButton
                android:id="@+id/rbpers3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type B" />

            <RadioButton
                android:id="@+id/rbpers4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type O" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:text="PARTNER's Blood Type"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkComp"
            app:layout_constraintTop_toBottomOf="@+id/header2" />

        <RadioGroup
            android:id="@+id/rgbtPART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/textView1"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <RadioButton
                android:id="@+id/rbpart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type A" />

            <RadioButton
                android:id="@+id/rbpart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type AB" />

            <RadioButton
                android:id="@+id/rbpart3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type B" />

            <RadioButton
                android:id="@+id/rbpart4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type O" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/checkComp"
            android:layout_width="114dp"
            android:layout_height="57dp"
            android:layout_marginTop="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/checkcompatibility" />


        <ImageButton
            android:id="@+id/openPopupinfo"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:layout_marginTop="1dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/header2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="@+id/header2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.461"
            app:srcCompat="@drawable/info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="50dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgbtPERS">


            <ImageView
                android:id="@+id/imageViewBloodTypePers"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/blood_o" />

            <TextView
                android:id="@+id/HeaderText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Choose the following blood types above"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ArticleText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:text="" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/PositiveTraitsImgPers"
                    android:layout_width="157dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/TraitsTextPosPers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/positivepng" />

                <TextView
                    android:id="@+id/TraitsTextPosPers"
                    android:layout_width="149dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4sp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/PositiveTraitsImgPers"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/TraitsTextNegPers"
                    android:layout_width="149dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4sp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/NegativeTraitsImgPers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/NegativeTraitsImgPers"
                    android:layout_width="157dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/TraitsTextNegPers"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/negative" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageViewBloodTypePart"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/blood_a" />

            <TextView
                android:id="@+id/HeaderText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ArticleText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/PositiveTraitsImgPart"
                    android:layout_width="157dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/TraitsTextPosPart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/positivepng" />

                <TextView
                    android:id="@+id/TraitsTextPosPart"
                    android:layout_width="149dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@+id/PositiveTraitsImgPart"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TraitsTextNegPart"
                    android:layout_width="149dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/NegativeTraitsImgPart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/NegativeTraitsImgPart"
                    android:layout_width="157dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/TraitsTextNegPart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/negative" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


